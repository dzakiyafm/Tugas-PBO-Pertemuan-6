<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PBO Pertemuan 6</title>

</head>
<body>
    <h1>Daftar Anggota Boy Grup SM</h1>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>NAMA</th>
            <th>INSTAGRAM</th>
            <th>GRUP</th>
            <th>AKSI</th>
        </tr>
        <% anggota.forEach(memb => {%>
        <tr>
            <td><%= memb.id %></td>
            <td><%= memb.name%></td>
            <td><%= memb.instagram %></td>
            <td><%= memb.grup %></td>
            <td>
                <a href="/edit/<%= memb.id %>">Edit</a> |
                <a href="/delete/<%= memb.id %>">Hapus</a> 
            </td>
        </tr>
        <% }) %>
    </table>

    <h2>Tambah Anggota Baru</h2>
    <form action="/add" method="post">
        <label for="name">Nama:</label>
        <input type="text" id="name" name="name" required><br>
        <label for="instagram">Instagram:</label>
        <input type="text" id="instagram" name="instagram"><br>
        <label for="grup">Grup:</label>
        <input type="text" id="grup" name="grup"><br>
        <button type="submit">Tambah</button>
    </form>
</body>
</html>